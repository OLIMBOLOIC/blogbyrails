            <%= f.label :Publication %> <br>
            <%= f.text_area :contenu %> <br> <br>
            <%# <%= f.file_field :image %> <br> %>
        </p>
    <p>
            <%= f.submit :Envoyer %> <br>
        </p>
 <% end %>